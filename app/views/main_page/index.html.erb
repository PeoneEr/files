<div class="main_page_content">
  <% @files.each do |dir, films| %>
    <% watched = 0; films.each do |film| film.watched ? watched += 1 : watched += 0; end %>
    <div class='dir'>
      <%= dir %> <a href='#' class='js-toggle-dir toggle-dir'>Свернуть</a>
    </div>

    <ul class='titles <%= watched.to_i == films.count.to_i ? "hidden" : "" %>'>
      <% films.each do |film| %>
        <li class='title'>
          <%= check_box_tag "watched_#{film.id}", film.id, film.watched ? true : false, class: 'js-child-item' %>
          <label for="watched_<%= film.id %>">
            <%= film.title %>
          </label>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
