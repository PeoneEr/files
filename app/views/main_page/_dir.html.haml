.row
  .panel.panel-default
    .panel-heading
      =dir.title


  .panel-body
    .col-xs-6
      -if dir.serias_count.to_i > 1
        %span= "Сериал (серий: #{dir.serias_count})"
      -else
        %span Фильм

    .col-xs-6
      -if current_user.user_films.search { with :dir, dir.title }.results.any?
        = link_to 'Смотрю', start_watching_my_files_path(dir: dir), class: 'btn btn-default'
      -else
        = link_to 'Смотреть', start_watching_my_files_path(dir: dir.title), class: 'btn btn-primary'
